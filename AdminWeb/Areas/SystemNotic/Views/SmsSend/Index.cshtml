
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title></title>
    <link href="~/Content/admin/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/layer/layer.js"></script>
</head>
<body>
    <div class="container-fluid">

        <ol class="breadcrumb">
            <li><a href="/set/admin/center">首页></a></li>
            <li><a href="#">系统通知></a></li>
            <li class="active">短信发送</li>
        </ol>
        <div class="alert alert-warning alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <strong>提示:</strong>尚未接通短信运营商接口，目前不能发送短信。
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-8">
                <form class="form-horizontal" role="form" id="formSend">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">短信内容</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3" id="SmsContent"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">手机号码</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3" id="Tel"></textarea>
                            <p class="text-warning">多个手机号码之间请用英文逗号隔开</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">发送</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        $("#formSend").submit(function ()
        {

            if ($("#SmsContent").val().trim().length == 0)
            {
                layer.tips('请输入短信内容!', '#SmsContent', { tipsMore: true, time: 4000 });
                $("#SmsContent").focus();
                return false;
            }
            if ($("#Tel").val().trim().length == 0)
            {
                layer.tips('请输入手机号码!', '#Tel', { tipsMore: true, time: 4000 });
                $("#Tel").focus();
                return false;
            }
            layer.msg('短信发送失败!');
            return false;
        });
    </script>
</body>
</html>

