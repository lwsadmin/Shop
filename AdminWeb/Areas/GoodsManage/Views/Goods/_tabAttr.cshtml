<script>
    $('#attr-tab').on('shown.bs.tab', function (e) {
        //e.target // newly activated tab
        //e.relatedTarget // previous active tab

        var guid = $("#Category").val();

        $.post("/GoodsManage/Goods/GetGoodsAttr", {
            goodsCategoryGuid: guid
        }, function (data) {
            $("#attr").html("");
            $("#attr").append("<br/>");
            $("#attr").append(data);
        });
    })
</script>